{# templates/registration/register.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Créer un compte
{% endblock %}


{% block home %}
<div class="container-fluid page-header py-5">
            <h1 class="text-center text-white display-6">Créer un compte</h1>
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                <li class="breadcrumb-item active text-white">Créer un compte</li>
            </ol>
        </div>
	<div class="container mt-5">
		<h1 class="h3 mb-3 font-weight-normal">Créer un compte</h1>

		<div class="row justify-content-center">
			<div class="col-md-6">
				{{ form_start(registrationForm, {'attr': {'class': 'form'}}) }}

				{{ form_row(registrationForm.email, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Email'}}) }}
				{{ form_row(registrationForm.plainPassword, {'label': 'Mot de pass', 'attr': {'class': 'form-control mb-3', 'placeholder': 'Mot de pass'}}) }}


				{{ form_row(registrationForm.agreeTerms, {
    'label': "J'accepte les conditions et les règles.",
    'label_attr': {'class': 'form-check-label'},
    'attr': {'class': 'form-check-input'}
}) }}


				<button type="submit" class="btn btn-lg btn-primary">S'inscrire</button>

				{{ form_end(registrationForm) }}
			</div>
		</div>
	</div>
{% endblock %}
