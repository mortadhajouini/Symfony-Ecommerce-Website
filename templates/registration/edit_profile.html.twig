{# templates/profile/edit_profile.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Editer le profil
{% endblock %}

{% block home %}
<div class="container-fluid page-header py-5">
            <h1 class="text-center text-white display-6">Editer le profil</h1>
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                <li class="breadcrumb-item active text-white">Editer le profil</li>
            </ol>
        </div>
	<div class="container mt-5">
		<h1 class="mb-4">Profil de modificateur</h1>

		<div class="row justify-content-center">
			<div class="col-md-6">
				{{ form_start(editProfileForm, {'attr': {'class': 'form'}}) }}

				{{ form_row(editProfileForm.email, {'attr': {'class': 'form-control mb-3', 'placeholder': 'E-mail'}}) }}
				{{ form_row(editProfileForm.newPassword, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Nouveau mot de passe'}}) }}

				<button type="submit" class="btn btn-primary">Confirmer</button>

				{{ form_end(editProfileForm) }}
			</div>
		</div>
	</div>
{% endblock %}
