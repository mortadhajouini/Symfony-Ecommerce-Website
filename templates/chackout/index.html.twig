{% extends 'base.html.twig' %}

{% block title %}Checkout{% endblock %}

{% block home %}
     <!-- Single Page Header start -->
        <div class="container-fluid page-header py-5">
            <h1 class="text-center text-white display-6">Checkout</h1>
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_cart_show', {'id': app.user.cart.id}) }}">panier</a></li>
                <li class="breadcrumb-item active text-white">Checkout</li>
            </ol>
        </div>
        <!-- Single Page Header End -->
<div class="container-fluid py-5">
            <div class="container py-5">
                <h1 class="mb-4"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Détails de la facturation</font></font></h1>
                <form action="#">
                    <div class="row g-5">
                        <div class="col-md-12 col-lg-6 col-xl-7">
                            <div class="row">
                                <div class="col-md-12 col-lg-6">
                                    <div class="form-item w-100">
                                        <label class="form-label my-3"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Prénom </font></font><sup><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">*</font></font></sup></label>
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="col-md-12 col-lg-6">
                                    <div class="form-item w-100">
                                        <label class="form-label my-3"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Nom de famille </font></font><sup><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">*</font></font></sup></label>
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="form-item">
                                <label class="form-label my-3"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Nom de l'entreprise </font></font><sup><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">*</font></font></sup></label>
                                <input type="text" class="form-control">
                            </div>
                            <div class="form-item">
                                <label class="form-label my-3"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Adresse </font></font><sup><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">*</font></font></sup></label>
                                <input type="text" class="form-control" placeholder="Numéro de maison Nom de la rue">
                            </div>
                            <div class="form-item">
                                <label class="form-label my-3"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Ville/Ville </font></font><sup><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">*</font></font></sup></label>
                                <input type="text" class="form-control">
                            </div>
                            <div class="form-item">
                                <label class="form-label my-3"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Pays </font></font><sup><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">*</font></font></sup></label>
                                <input type="text" class="form-control">
                            </div>
                            <div class="form-item">
                                <label class="form-label my-3"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Code postal/code postal </font></font><sup><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">*</font></font></sup></label>
                                <input type="text" class="form-control">
                            </div>
                            <div class="form-item">
                                <label class="form-label my-3"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Mobile </font></font><sup><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">*</font></font></sup></label>
                                <input type="tel" class="form-control">
                            </div>
                            <div class="form-item">
                                <label class="form-label my-3"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Adresse e-mail </font></font><sup><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">*</font></font></sup></label>
                                <input type="email" class="form-control">
                            </div>
                            <div class="form-check my-3">
                                <input type="checkbox" class="form-check-input" id="Account-1" name="Accounts" value="Accounts">
                                <label class="form-check-label" for="Account-1"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Créer un compte?</font></font></label>
                            </div>
                            <hr>
                            <div class="form-check my-3">
                                <input class="form-check-input" type="checkbox" id="Address-1" name="Address" value="Address">
                                <label class="form-check-label" for="Address-1"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Expédier à une adresse différente?</font></font></label>
                            </div>
                            <div class="form-item">
                                <textarea name="text" class="form-control" spellcheck="false" cols="30" rows="11" placeholder="Notes de commande (facultatif)"></textarea>
                            </div>
                        </div>
                            <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                                <button type="button" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Passer la commande</font></font></button>
                            </div>
                        </div>
                    </form></div>
                
            </div>
{% endblock %}
